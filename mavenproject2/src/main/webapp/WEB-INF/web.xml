<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_2.4.xsd">
    <servlet>
        <servlet-name>Produto</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.Produto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Usuario</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.Usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cliente</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.Cliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pedido</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.Pedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidoItem</servlet-name>
        <servlet-class>com.mycompany.mavenproject2.controller.PedidoItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Produto</servlet-name>
        <url-pattern>/Produto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Usuario</servlet-name>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cliente</servlet-name>
        <url-pattern>/Cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pedido</servlet-name>
        <url-pattern>/Pedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PedidoItem</servlet-name>
        <url-pattern>/PedidoItem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
        <welcome-file-list>
            <welcome-file>Produto</welcome-file>
        </welcome-file-list>
    </session-config>
</web-app>
